<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="@color/teal_700"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="395dp"
        android:layout_height="395dp"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TableRow
            android:layout_width="135dp"
            android:layout_height="130dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="#FDFBFB"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/border_raduis"

                android:onClick="Selectbtn"
                android:textColor="#F6F0F0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="#FAF7F7"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="135dp"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="#FAF8F8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="#FFFCFC"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="135dp"
            android:layout_height="130dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_raduis"
                android:onClick="Selectbtn"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_replay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_raduis"
        android:text="Replay"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#271D1E"
        android:textColorHint="#2E2929"
        android:textDirection="anyRtl"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/auto_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/border_raduis"
        android:fontFamily="sans-serif-black"
        android:text="play with computer "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/two_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:background="@drawable/border_raduis"
        android:fontFamily="sans-serif-black"
        android:text="2 players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/auto_play" />

</androidx.constraintlayout.widget.ConstraintLayout>